#service tor restart
#service dnsmasq restart

# Borra iptables NAT

iptables -t nat -F

# Re activamos el masquerading, borrado al hacer iptables -t nat -F

iptables -t nat -A POSTROUTING -o wlan0 -j MASQUERADE

# Evita el puerto 22 no vaya al router por si usamos ssh 
iptables -t nat -A PREROUTING -i eth0 -p tcp --dport 22 -j REDIRECT --to-ports 22

iptables -t nat -A PREROUTING -i eth0 -p tcp --dport 3142 -j REDIRECT --to-ports 3142

# Las consultas DNS se van todas a Tor por el  9050 
# Si usamos dnsmasq no es necesario, ya que podemos usar dnstor desde dnsmasq
iptables -t nat -A PREROUTING -i eth0 -p udp --dport 53 -j REDIRECT --to-ports 9053

# Con ACCEPT evitamos que salga por TOR el trafico en los puertos elegidos
# iptables -t nat -A PREROUTING -i eth0 -p tcp --syn -m multiport --dports 3142,81 -j ACCEPT

# Todo el trafico restante tcp va por tor al 9040
iptables -t nat -A PREROUTING -i eth0 -p tcp --syn -j REDIRECT --to-ports 9040


service tor restart
service dnsmasq restart
#service dnscrypt-proxy restart
